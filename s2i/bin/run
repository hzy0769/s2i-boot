#!/bin/bash -e
#
# S2I run script for the 's2i-boot' image.
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

java -version
echo 'java -Djava.security.egd=file:/dev/./urandom ${JAVA_OPTIONS} -jar /opt/openshift/app.jar ${APP_OPTIONS}'

cd /opt/openshift 
java -Djava.security.egd=file:/dev/./urandom $JAVA_OPTIONS -jar /opt/openshift/app.jar $APP_OPTIONS
